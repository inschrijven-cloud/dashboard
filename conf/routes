GET         /api/v1/day/attendances/child                    be.thomastoye.speelsysteem.dashboard.controllers.api.DayApiController.numberOfChildAttendances


# Child API

GET         /api/v1/child                                    be.thomastoye.speelsysteem.dashboard.controllers.api.ChildApiController.all
POST        /api/v1/child                                    be.thomastoye.speelsysteem.dashboard.controllers.api.ChildApiController.create
GET         /api/v1/child/:id/attendances                    be.thomastoye.speelsysteem.dashboard.controllers.api.DayApiController.getAttendancesForChild(id)
POST        /api/v1/child/:childId/attendances/:dayId        be.thomastoye.speelsysteem.dashboard.controllers.api.DayApiController.addAttendancesForChild(childId, dayId)

# File API

GET         /api/v1/files/fiscalCertificates/:year           be.thomastoye.speelsysteem.dashboard.controllers.api.FileController.downloadFiscalCertificates(year: Int)

### Assets

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                    controllers.Assets.at(path="/public", file)
