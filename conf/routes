# Home page
GET     /                      controllers.ApplicationController.home

GET     /heartbeat              controllers.ApplicationController.heartbeat

# Animators
GET     /animator              controllers.CrewController.list
GET     /animator/             controllers.CrewController.list
GET     /animator/lijst        controllers.CrewController.list
GET     /animator/details/:id  controllers.CrewController.details(id: String)

# Children
GET     /kind               controllers.ChildController.showList
GET     /kind/              controllers.ChildController.showList
GET     /kind/lijst         controllers.ChildController.showList
GET     /kind/details/:id   controllers.ChildController.details(id: String)

### API

# Day API

GET     /api/v1/day            controllers.api.DayApiController.all

# Child API

GET     /api/v1/child                               controllers.api.ChildApiController.all
POST    /api/v1/child                               controllers.api.ChildApiController.create
GET     /api/v1/child/:id/attendances               controllers.api.DayApiController.getAttendancesForChild(id)
GET     /api/v1/child/:childId/attendances/:dayId   controllers.api.DayApiController.addAttendancesForChild(childId, dayId)

### Assets

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# WebJar routing (for bootstrap, ...)
GET		/webjars/*file				controllers.WebJarAssets.at(file)
